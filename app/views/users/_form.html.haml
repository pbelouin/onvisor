= simple_form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  = f.input :email
  = f.input :role, collection: User::ROLES
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
